<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contPpal"
    tools:context=".Dudas">

    <ScrollView
        android:id="@+id/pantalla"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/encabezado"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#B9545C"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DUDAS FRECUENTES SOBRE \nEL TIPO DE ROSTRO"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/alegreya"
                    android:textStyle="bold"
                    android:textSize="9.5pt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/descripcion1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/dudas_uno"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:id="@+id/textosUno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textAlignment="textStart"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="150dp"
                        android:layout_marginRight="150dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#540721"
                        app:fontFamily="@font/alegreya"
                        android:textStyle="normal"
                        android:textSize="8.5pt"
                        android:text="¿Cómo seleccionar \nmi tipo de rostro? "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textAlignment="textStart"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginEnd="150dp"
                        android:layout_marginRight="150dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/colorVerdeOsc"
                        app:fontFamily="@font/alegreya"
                        android:textStyle="normal"
                        android:textSize="7pt"
                        android:text="Selecciona el nombre de la figura \nque más se adapte a tu rostro "/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/descripcion2"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/dudas_dos"
                    android:scaleType="centerInside"/>
                <LinearLayout
                    android:id="@+id/textosDos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="right">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textAlignment="textEnd"
                        android:layout_marginStart="80dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:textColor="#540721"
                        app:fontFamily="@font/alegreya"
                        android:textStyle="normal"
                        android:textSize="8.5pt"
                        android:text="¿Qué hago si no encuentro una  \nfigura exacta a mi rostro?"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textAlignment="textEnd"
                        android:layout_marginStart="207dp"
                        android:layout_marginLeft="207dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/colorVerdeOsc"
                        app:fontFamily="@font/alegreya"
                        android:textStyle="normal"
                        android:textSize="7pt"
                        android:text="@string/descDudaDos"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/areaBotones"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="15dp">
                <Button
                    android:id="@+id/btnVolver"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/boton_vinot"
                    android:textColor="#FFFFFF"
                    android:text="VOLVER"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>